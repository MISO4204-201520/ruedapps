# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                          controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)

# Rutas perfil
POST        /login                     controllers.perfil.PerfilKernelController.login()
POST        /usuario/crear             controllers.perfil.PerfilKernelController.CrearUsuario()
POST        /usuario/modificar         controllers.perfil.PerfilKernelController.ActualizarUsuario()

# Routes Rutas
POST        /ruta/ubicacion/crear        controllers.ruta.RutaController.SaveUbicacion()