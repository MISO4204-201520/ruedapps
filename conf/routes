# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                    controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                        controllers.Assets.versioned(path="/public", file: Asset)

# Rutas perfil
GET         /login                               controllers.perfil.PerfilKernelController.Login()
GET         /logout                              controllers.perfil.PerfilKernelController.LogOut()
POST        /login                               controllers.perfil.PerfilKernelController.LoginPost()
POST        /usuario/crear                       controllers.perfil.PerfilKernelController.CrearUsuario()
POST        /usuario/modificar                   controllers.perfil.PerfilKernelController.ActualizarUsuario()
GET         /usuario/:id                         controllers.perfil.PerfilKernelController.ConsultarUsuarioPorId(id: Long)

# Routes Rutas
POST        /ruta/ubicacion/crear                controllers.ruta.RutaController.SaveUbicacion()
POST        /ruta/crear                          controllers.ruta.RutaController.SaveRuta()

# Rutas Categoria
GET         /categoria/categorias                controllers.directorio_servicios.DirectorioServiciosKernelController.retornarCategorias()
GET         /categoria/servicios                 controllers.directorio_servicios.DirectorioServiciosKernelController.retornarServiciosPorCategoria()

POST        /categoria/registrar                 controllers.directorio_servicios.DirectorioServiciosKernelController.registrarCategoria()
POST        /categoria/servicio/registrar        controllers.directorio_servicios.DirectorioServiciosKernelController.registrarServicio()
POST        /categoria/editar                    controllers.directorio_servicios.DirectorioServiciosKernelController.editarServicio()
POST        /categoria/eliminar                  controllers.directorio_servicios.DirectorioServiciosKernelController.eliminarServicio()