# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                 controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                     controllers.Assets.versioned(path="/public", file: Asset)

# Rutas perfil
GET         /login                                            controllers.perfil.PerfilKernelController.Login()
GET         /logout                                           controllers.perfil.PerfilKernelController.LogOut()
POST        /login                                            controllers.perfil.PerfilKernelController.LoginPost()
POST        /usuario/crear                                    controllers.perfil.PerfilKernelController.CrearUsuario()
POST        /proveedor/crear                                  controllers.perfil.PerfilKernelController.CrearProveedor()
POST        /usuario/modificar                                controllers.perfil.PerfilKernelController.ActualizarUsuario()
GET         /usuario/:id                                      controllers.perfil.PerfilKernelController.ConsultarUsuarioPorId(id: Long)
GET         /ciclista/:email                                  controllers.perfil.PerfilKernelController.ConsultarUsuarioPorEmail(email: String)
GET         /ciclistas                                        controllers.perfil.PerfilKernelController.Ciclistas()
GET         /amigo/:id                                        controllers.perfil.PerfilKernelController.Amigos(id: Long)
POST        /amigo                                            controllers.perfil.PerfilKernelController.AgregarAmigo()
GET         /no-amigo/:id                                     controllers.perfil.PerfilKernelController.NoAmigos(id: Long)

# Routes Rutas
POST        /ubicacion/crear/:id                              controllers.ruta.RutaController.SaveUbicacion(id: Long)
POST        /ruta/crear                                       controllers.ruta.RutaController.SaveRuta()
POST        /recorrido/crear                                  controllers.ruta.RutaController.SaveRutaRecorrido()
POST        /historico/crear                                  controllers.ruta.RutaController.SaveHistoricoRecorrido()
GET         /historico/:id                                    controllers.ruta.RutaController.ConsutaHistoricoPorId(id: Long)
GET         /historico/usuario/:id                            controllers.ruta.RutaController.ConsultarHistoricoPorUsusario(id: Long)
POST        /recorrido/programacion                           controllers.ruta.RutaController.SaveProgramacionRuta()
POST        /recorrido/programacion/ciclista/:id              controllers.ruta.RutaController.AddCiclistaProgramacionRuta(id: Long)
GET         /recorrido/programacion/:id                       controllers.ruta.RutaController.ConsultaProgramacionRuta(id: Long)
GET         /recorrido/programacion/organizador/:id           controllers.ruta.RutaController.ListaProgramacionRutaPorOrganizador(id: Long)
GET         /recorrido/programacion/participante/:id          controllers.ruta.RutaController.ListaProgramacionRutaPorParticipante(id: Long)

# Rutas Categoria
GET         /categoria/categorias                             controllers.directorio_servicios.DirectorioServiciosKernelController.retornarCategorias()
GET         /categoria/servicios/:idCategoria                 controllers.directorio_servicios.DirectorioServiciosKernelController.retornarServiciosPorCategoria(idCategoria: Long)
POST        /categoria/registrar                              controllers.directorio_servicios.DirectorioServiciosKernelController.registrarCategoria()
POST        /categoria/servicio/registrar/:idCategoria        controllers.directorio_servicios.DirectorioServiciosKernelController.registrarServicio(idCategoria: Long)
POST        /categoria/editar                                 controllers.directorio_servicios.DirectorioServiciosKernelController.editarServicio()
POST        /categoria/eliminar                               controllers.directorio_servicios.DirectorioServiciosKernelController.eliminarServicio()

#Rutas Comunicacion
GET         /mensaje                                          controllers.comunicacion.MensajeController.Mensaje()
POST        /mensaje                                          controllers.comunicacion.MensajeController.MensajePost()
GET         /mensajeSocket                                    controllers.comunicacion.MensajeController.MensajeSocket()
